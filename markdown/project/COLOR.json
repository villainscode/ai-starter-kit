{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Toss Design System - Color Palette",
  "description": "토스 디자인 시스템 컬러 팔레트 (toss.im, toss.tech, tossinvest.com 분석 기반)",
  "version": "1.0.0",
  "colors": {
    "primary": {
      "blue": {
        "main": "#0064FF",
        "secondary": "#3182F6",
        "light": "#E8F3FF",
        "hover": "#0055DD",
        "active": "#0047BB",
        "description": "토스 시그니처 블루 - 주요 CTA, 링크, 브랜드 컬러"
      }
    },
    "grayscale": {
      "gray900": "#191919",
      "gray800": "#191F28",
      "gray700": "#333D4B",
      "gray600": "#4E5968",
      "gray500": "#6B7684",
      "gray400": "#8B95A1",
      "gray300": "#B0B8C1",
      "gray200": "#E5E8EB",
      "gray100": "#F2F4F6",
      "gray50": "#F9FAFB",
      "description": "중립적인 그레이스케일 - 텍스트, 배경, 구분선"
    },
    "background": {
      "white": "#FFFFFF",
      "light": "#F8F9FA",
      "gray": "#F2F4F6",
      "blue": "#E8F3FF",
      "description": "배경 색상 - 페이지, 카드, 섹션"
    },
    "semantic": {
      "success": {
        "main": "#16C784",
        "light": "#E6F9F3",
        "dark": "#00B56A",
        "description": "성공, 상승, 긍정적 상태"
      },
      "error": {
        "main": "#EA3943",
        "light": "#FFF0F1",
        "dark": "#D32F2F",
        "description": "오류, 하락, 부정적 상태"
      },
      "warning": {
        "main": "#FFA726",
        "light": "#FFF4E5",
        "dark": "#F57C00",
        "description": "경고, 주의 상태"
      },
      "info": {
        "main": "#3182F6",
        "light": "#E8F3FF",
        "dark": "#1E6FDB",
        "description": "정보, 안내 메시지"
      }
    },
    "interaction": {
      "hover": {
        "blue": "#0055DD",
        "gray": "#E5E8EB",
        "description": "호버 상태 색상"
      },
      "active": {
        "blue": "#0047BB",
        "gray": "#D1D6DB",
        "description": "활성/눌림 상태 색상"
      },
      "focus": {
        "ring": "rgba(49, 130, 246, 0.4)",
        "description": "포커스 링 색상"
      },
      "disabled": {
        "background": "#F2F4F6",
        "text": "#B0B8C1",
        "description": "비활성화 상태 색상"
      }
    },
    "financial": {
      "positive": "#16C784",
      "negative": "#EA3943",
      "neutral": "#6B7684",
      "description": "금융 특화 - 상승/하락/중립"
    },
    "text": {
      "primary": "#191919",
      "secondary": "#4E5968",
      "tertiary": "#6B7684",
      "disabled": "#B0B8C1",
      "inverse": "#FFFFFF",
      "link": "#0064FF",
      "description": "텍스트 색상 - 계층별 구분"
    },
    "border": {
      "default": "#E5E8EB",
      "light": "#F2F4F6",
      "dark": "#D1D6DB",
      "focus": "#0064FF",
      "error": "#EA3943",
      "description": "테두리 색상 - 상태별 구분"
    },
    "shadow": {
      "sm": "rgba(0, 0, 0, 0.05)",
      "md": "rgba(0, 0, 0, 0.07)",
      "lg": "rgba(0, 0, 0, 0.1)",
      "xl": "rgba(0, 0, 0, 0.15)",
      "card": "rgba(0, 0, 0, 0.08)",
      "description": "그림자 색상 - 깊이 표현"
    }
  },
  "cssVariables": {
    "primary": {
      "--toss-blue-primary": "#0064FF",
      "--toss-blue-secondary": "#3182F6",
      "--toss-blue-light": "#E8F3FF",
      "--toss-blue-hover": "#0055DD",
      "--toss-blue-active": "#0047BB"
    },
    "grayscale": {
      "--toss-gray-900": "#191919",
      "--toss-gray-800": "#191F28",
      "--toss-gray-700": "#333D4B",
      "--toss-gray-600": "#4E5968",
      "--toss-gray-500": "#6B7684",
      "--toss-gray-400": "#8B95A1",
      "--toss-gray-300": "#B0B8C1",
      "--toss-gray-200": "#E5E8EB",
      "--toss-gray-100": "#F2F4F6",
      "--toss-gray-50": "#F9FAFB"
    },
    "background": {
      "--toss-white": "#FFFFFF",
      "--toss-background-light": "#F8F9FA",
      "--toss-background-gray": "#F2F4F6",
      "--toss-background-blue": "#E8F3FF"
    },
    "semantic": {
      "--toss-success": "#16C784",
      "--toss-success-light": "#E6F9F3",
      "--toss-success-dark": "#00B56A",
      "--toss-error": "#EA3943",
      "--toss-error-light": "#FFF0F1",
      "--toss-error-dark": "#D32F2F",
      "--toss-warning": "#FFA726",
      "--toss-warning-light": "#FFF4E5",
      "--toss-warning-dark": "#F57C00",
      "--toss-info": "#3182F6",
      "--toss-info-light": "#E8F3FF",
      "--toss-info-dark": "#1E6FDB"
    },
    "interaction": {
      "--toss-hover-blue": "#0055DD",
      "--toss-hover-gray": "#E5E8EB",
      "--toss-active-blue": "#0047BB",
      "--toss-active-gray": "#D1D6DB",
      "--toss-focus-ring": "rgba(49, 130, 246, 0.4)",
      "--toss-disabled-bg": "#F2F4F6",
      "--toss-disabled-text": "#B0B8C1"
    },
    "financial": {
      "--toss-positive": "#16C784",
      "--toss-negative": "#EA3943",
      "--toss-neutral": "#6B7684"
    },
    "text": {
      "--toss-text-primary": "#191919",
      "--toss-text-secondary": "#4E5968",
      "--toss-text-tertiary": "#6B7684",
      "--toss-text-disabled": "#B0B8C1",
      "--toss-text-inverse": "#FFFFFF",
      "--toss-text-link": "#0064FF"
    },
    "border": {
      "--toss-border-default": "#E5E8EB",
      "--toss-border-light": "#F2F4F6",
      "--toss-border-dark": "#D1D6DB",
      "--toss-border-focus": "#0064FF",
      "--toss-border-error": "#EA3943"
    }
  },
  "tailwindConfig": {
    "extends": {
      "colors": {
        "toss": {
          "blue": {
            "DEFAULT": "#0064FF",
            "secondary": "#3182F6",
            "light": "#E8F3FF",
            "hover": "#0055DD",
            "active": "#0047BB"
          },
          "gray": {
            "900": "#191919",
            "800": "#191F28",
            "700": "#333D4B",
            "600": "#4E5968",
            "500": "#6B7684",
            "400": "#8B95A1",
            "300": "#B0B8C1",
            "200": "#E5E8EB",
            "100": "#F2F4F6",
            "50": "#F9FAFB"
          },
          "success": {
            "DEFAULT": "#16C784",
            "light": "#E6F9F3",
            "dark": "#00B56A"
          },
          "error": {
            "DEFAULT": "#EA3943",
            "light": "#FFF0F1",
            "dark": "#D32F2F"
          },
          "warning": {
            "DEFAULT": "#FFA726",
            "light": "#FFF4E5",
            "dark": "#F57C00"
          },
          "info": {
            "DEFAULT": "#3182F6",
            "light": "#E8F3FF",
            "dark": "#1E6FDB"
          }
        }
      }
    }
  },
  "usageGuidelines": {
    "primary": {
      "use": [
        "주요 CTA 버튼",
        "링크 텍스트",
        "활성 상태 표시",
        "브랜드 강조 요소"
      ],
      "avoid": [
        "장식적 목적으로 과도하게 사용",
        "텍스트 배경색으로 사용 (대비 부족)",
        "여러 Primary 색상 혼용"
      ]
    },
    "grayscale": {
      "use": [
        "텍스트 계층 구조 표현",
        "배경색 및 섹션 구분",
        "보더 및 구분선",
        "비활성화 상태"
      ],
      "avoid": [
        "과도하게 어두운 회색 남용",
        "대비가 낮은 텍스트-배경 조합"
      ]
    },
    "semantic": {
      "use": [
        "성공/실패 메시지",
        "금융 데이터 (상승/하락)",
        "경고 및 정보 알림",
        "상태 표시 (뱃지, 태그)"
      ],
      "avoid": [
        "장식적 목적으로 사용",
        "의미와 맞지 않는 컨텍스트에서 사용"
      ]
    },
    "accessibility": {
      "contrast": {
        "AALevel": "4.5:1 (일반 텍스트)",
        "AAALevel": "7:1 (대형 텍스트)",
        "recommendation": "모든 텍스트-배경 조합에서 AA 이상 준수"
      },
      "colorBlindness": {
        "recommendation": [
          "색상만으로 정보 전달 금지",
          "아이콘, 텍스트, 패턴으로 보조",
          "레드-그린 조합 신중하게 사용"
        ]
      }
    }
  },
  "metadata": {
    "createdAt": "2025-10-24",
    "version": "1.0.0",
    "sources": [
      "https://toss.im/",
      "https://toss.tech/",
      "https://www.tossinvest.com/news"
    ],
    "maintainer": "Design System By CodeVillains"
  }
}
